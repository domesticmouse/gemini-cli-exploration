{
  "name": "kicad-file-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for reading and analyzing KiCad project files",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && cp src/kicad/default_drawing_sheet.kicad_wks build/kicad/",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run clean && npm run build && npm run lint",
    "prepare": "npm run build"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domesticmouse/kicad-file-mcp.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/domesticmouse/kicad-file-mcp/issues"
  },
  "homepage": "https://github.com/domesticmouse/kicad-file-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "engines": {
    "node": ">=22"
  }
}
